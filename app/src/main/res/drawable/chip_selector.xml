<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado quando o Chip está pressionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5733" /> <!-- Cor vermelha quando pressionado -->
            <corners android:radius="8dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
    <!-- Estado padrão -->
    <item>
        <solid android:color="@color/white"/>
        <corners android:radius="0dp" />
        <stroke android:color="@color/black" android:width="1dp"/>
        <!-- Defina aqui o background padrão que não está pressionado -->
    </item>
</selector>
