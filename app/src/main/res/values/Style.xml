<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ContainerMoradias">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_moradias</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ContainerMoradiasExpandir">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/container_moradias</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Edit_Text_Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">17dp</item>
        <item name="android:maxLength">50</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>


    <style name="Edit_Text_links">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>

    <style name="Edit_Text_procurar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> match_parent</item>
        <item name="android:background">@drawable/button_filtrar</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLength">50</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">120dp</item>


    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>

        <item name="android:background">@drawable/button_login</item>
        <item name="android:padding">20dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>

        <item name="android:background">@drawable/button_grey</item>
        <item name="android:padding">20dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    


</resources>