<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TCC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TCC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TCC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TCC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Search_view_theme">
        <item name="colorSecondary">#8A9399</item>
        <item name="searchBackground">#1A2229</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/ic_moradores</item>
        <item name="hintColor">#8A9399</item>
        <item name="backIconTint">#8A9399</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">#8A9399</item>

    </style>


    <style name="Base_toolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="iconsTint">@style/Base_toolbarTheme</item>
    </style>


    <style name="Base_toolbarTheme">
        <item name="android:textColorPrimary">#8A9399</item>
        <item name="android:textColorSecondary">#8A9399</item>
    </style>



</resources>