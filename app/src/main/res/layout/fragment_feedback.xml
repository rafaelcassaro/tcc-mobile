<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.user.FeedbackFragment">


    <View
        android:id="@+id/container_feedback"
        style="@style/ContainerComponents"
        android:layout_height="500dp"
        android:background="@color/almostWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        />

    <TextView
        android:id="@+id/tv_titulo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="feedback"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="@color/almostBlack"
        android:textStyle="bold"
        android:layout_margin="25dp"

        app:layout_constraintStart_toStartOf="@id/container_feedback"
        app:layout_constraintEnd_toEndOf="@id/container_feedback"
        app:layout_constraintTop_toTopOf="@id/container_feedback"
        />

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/edit_text_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="10dp"
        android:hint="maximo: 300 caracteres"
        android:textColorHint="@color/Grey"
        android:maxLength="300"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/container_feedback"
        app:layout_constraintEnd_toEndOf="@id/container_feedback"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_container"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_enviar"
        style="@style/Button"

        android:text="Enviar"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_feedback"
        android:layout_margin="35dp"
        android:padding="15dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
