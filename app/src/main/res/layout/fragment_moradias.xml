<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moradias.MoradiasFragment">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toobar_pica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/Blue"
                />



            <com.ferfalk.simplesearchview.SimpleSearchView
                android:id="@+id/edit_procurar"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/almostWhite"
                android:theme="@style/Search_view_theme"
                app:type="bar"


                app:layout_constraintStart_toStartOf="@id/toobar_pica"
                app:layout_constraintEnd_toStartOf="@id/bt_filtrar"
                app:layout_constraintTop_toTopOf="@id/toobar_pica"
                app:layout_constraintBottom_toBottomOf="@id/toobar_pica"

                />


        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_moradias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/almostWhite"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toobar_pica"


            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/activity_moradia_layout" />

    </com.google.android.material.appbar.AppBarLayout>


</androidx.constraintlayout.widget.ConstraintLayout>